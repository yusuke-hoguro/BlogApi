{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // baseUrlとpathsを追加してimportpathを簡略化
    "baseUrl": ".",
    "paths": {
      "@e2e/*": ["tests/e2e/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src", 
    "vite-env.d.ts",
    "tests/e2e/**/*.ts",
    "playwright.config.ts"
  ]
}
